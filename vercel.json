{
  "version": 2,
  "builds": [
    { 
      "src": "api/index.js", 
      "use": "@vercel/node",
      "config": {
        "runtime": "nodejs18.x"
      }
    },
    { 
      "src": "KinFlick/frontend/package.json", 
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "build",
        "nodeVersion": "18.x" 
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.js" },
    { "src": "/(.*)", "dest": "KinFlick/frontend/build/$1", "continue": true },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "KinFlick/frontend/build/index.html" }
  ]
}